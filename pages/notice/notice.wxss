.table {
  border: 0px solid darkgray;
  font-size: 16px;
  height: 100vh;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  height: 4rem;

}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
    height: 4rem;
    display: flex;
    align-items: center;

}
.bg-w{
  background: snow;
}

.bg-g{
  background: #eee;
}
 
.th {
  width:40%;
  justify-content: center;
  background: #54b1c2;
  color: #fff;
  display: flex;
  height: 4rem;
  align-items: center;
}
.open{

  background: #54b1c2;
  height: 2rem;
  color: #FFFFFF;
  display: flex;
  font-size: 12px;
  align-items: center;
}

.mask{

    width: 100%;

    height: 100%;

    position: fixed;

    top: 0;

    left: 0;

    background: #000;

    z-index: 9000;

    opacity: 0.7;

}

 

