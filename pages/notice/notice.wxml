<!--pages/notice/notice.wxml-->
<view>
<view>
<van-tabbar active="1" bind:change="onChange">
  <van-tabbar-item icon="home-o">首页</van-tabbar-item>
  <van-tabbar-item icon="friends-o" info="5">通知</van-tabbar-item>
  <van-tabbar-item icon="setting-o" info="20">个人中心</van-tabbar-item>
</van-tabbar>
</view>
<view class="table">
  <view class="tr bg-w">
    <view class="th">任务日期</view>
    <view class="th">任务时间</view>
    <view class="th">任务详情及确认</view>
  </view>
  <block wx:for="{{listData}}" wx:key="{{code}}">
    <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
      <view class="td">{{item.date}}</view>
      <view class="td">{{item.time}}</view>
      <view class="td">
      <button class='open' >查看</button>
      </view>
    </view>
    <view class="tr" wx:else>
      <view class="td">{{item.date}}</view>
      <view class="td">{{item.time}}</view>
      <view class="td">
      <button class='open' >查看</button>
      </view>
    </view>
  </block>
</view>
</view>