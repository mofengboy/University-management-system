<!--pages/history/history.wxml-->
<view>
<form bindsubmit='confirm'>
<view class="mask" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
<view class="modalDlg" wx:if="{{showModal}}"> 
   <view class="row">
      <view class="info-input1">检查日期：</view>
      <view class="info-input1">{{history.checkDate}}</view>
    </view>
    <view class="row">
      <view class="info-input1">检查时间：</view>
      <view class="info-input1">{{history.checkTime}}</view>
    </view>
    <view class="row">
      <view class="info-input1">检查地点：</view>
      <view class="info-input1">{{history.room}}宿舍</view>
    </view>
    <view class="row">
      <view class="info-input1">检查评分：</view>
      <view class="info-input1">{{history.scores}}</view>
    </view>   
</view>
<view class="row">
  <view class="info-input1">请在下方选择日期</view>
  <picker
    name="date"
    mode="date"
    value="{{date}}"
    end="{{maxDate}}"
    bindchange="bindDateChange">
    <view class="info-input1">
      当前选择: {{date}} >>
    </view>
  </picker>
</view>

<view class='row'>
        <view class='info'>
               <input name="building" class= 'info-input1'  placeholder="请输入宿舍楼号" />
         </view>
 </view>
<view class='row'>
        <view class='info'>
               <input name="room" class= 'info-input1'  placeholder="请输入宿舍号" />
         </view>
 </view>
<view>
<button class="submit"  bindtap="submit" form-type='submit'>提交</button>
</view>
</form>
</view>
