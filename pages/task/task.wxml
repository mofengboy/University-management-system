<!--pages/task/task.wxml-->
<view>
<form bindsubmit='confirm'>

 <view class='row'>
        <view class='info'>
               <input  class= 'info-input' value="{{person}}" placeholder="请输入检查人员" />
         </view>
 </view>
 <view class='row'>
        <view class='info'>
               <input class= 'info-input' value="{{checkTime}}"  placeholder="请输入检查时间" />
         </view>
 </view>
 <view class='row'>
        <view class='info'>
               <input name="building" class= 'info-input' value="{{building}}"  placeholder="请输入宿舍楼号" />
         </view>
 </view>
 <view class='row'>
        <view class='info'>
               <input name="room" class= 'info-input' value="{{room}}" placeholder="请输入宿舍号" />
         </view>
 </view>
 <view class='row'>
        <view class='info'>
               <input  class= 'info-input' value="{{rule}}" placeholder="请输入检查细则" />
         </view>
 </view>
<button class='submit' form-type='submit'>提交</button>

 </form>
</view>
